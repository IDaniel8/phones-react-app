{
  "name": "phones-app",
  "version": "1.0.0",
  "scripts": {
    "client:prod": "cd client && yarn build",
    "server:prod": "cd server && yarn build",
    "client:dev": "cd client && yarn start",
    "server:dev": "cd server && yarn start",
    "install:client": "cd client && yarn install",
    "install:server": "cd server && yarn install",
    "postinstall": "npm run install:client && npm run install:server",
    "dev": "concurrently --kill-others-on-fail \"yarn server:dev\" \"yarn client:dev\"",
    "prod": "concurrently --kill-others-on-fail \"yarn server:prod\" \"yarn client:prod\""
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "husky": "^4.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd client && yarn lint",
      "pre-push": "yarn client:prod"
    }
  }
}
